{
  "excluded_dirs": [
    "node_modules",
    "target",
    "dist",
    "build",
    ".git",
    "vendor",
    "coverage",
    "__pycache__",
    ".idea",
    ".vscode"
  ],
  "max_file_size": 1048576,
  "analysis_depth": 5,
  "security_checks": [
    "eval",
    "innerHTML",
    "exec",
    "dangerouslySetInnerHTML",
    "shell_exec",
    "password",
    "token",
    "api_key",
    "secret"
  ],
  "complexity_threshold": 15,
  "min_comment_ratio": 0.1,
  "performance_checks": [
    "large_allocations",
    "infinite_loops",
    "recursive_calls"
  ]
}